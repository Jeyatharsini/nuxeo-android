<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style
    name="Theme.NuxeoAndroid"
    parent="android:Theme.Light"
  >
    <item name="android:windowTitleBackgroundStyle">@style/Kapps.WindowTitleBackground</item>
    <item name="android:windowTitleSize">@dimen/headerHeight</item>
  </style>

  <style
    name="Theme.NuxeoAndroid.NoTitle"
    parent="Theme.NuxeoAndroid"
  >
    <item name="android:windowNoTitle">true</item>
  </style>

  <style
    name="Theme.NuxeoAndroid.NoTitle.Fullscreen"
    parent="Theme.NuxeoAndroid.NoTitle"
  >
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style
    name="Theme.Dialog.NuxeoAndroid"
    parent="android:Theme.Dialog"
  />

  <style
    name="Theme.NuxeoAndroid.Transparent"
    parent="Theme.NuxeoAndroid"
  >
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowFrame">@null</item> 
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
  </style>

</resources>
