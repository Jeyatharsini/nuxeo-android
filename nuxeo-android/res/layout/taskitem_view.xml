<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="wrap_content">

	<ImageView android:id="@+id/icon" android:layout_width="32dip"
		android:layout_height="56dip" android:layout_centerVertical="true"
		android:src="@drawable/tasks" android:scaleType="fitCenter"
		android:padding="5dip" />

	<TextView android:id="@+id/title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/icon"
		android:text="Title Document" android:textStyle="bold"
		android:textSize="16dip" android:padding="3dip" />

	<TextView android:layout_toRightOf="@id/icon"
		android:layout_below="@id/title" android:id="@+id/comment" android:text="comment"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="11dip"
		android:textStyle="italic" android:padding="1dip" />

	<TextView android:layout_toRightOf="@id/icon"
		android:layout_below="@id/comment" android:id="@+id/dates" android:text=""
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="11dip"
		android:textStyle="italic" android:padding="1dip" />

</RelativeLayout>
