<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
	    <ImageView android:src="@drawable/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/iconView"></ImageView>
		<TextView
			android:id="@+id/id_entry"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="28dip" />
		<TextView
			android:id="@+id/status_entry"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14dip" />
    </LinearLayout>
     <TextView
		android:id="@+id/title_entry"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="28dip" />

</LinearLayout>
